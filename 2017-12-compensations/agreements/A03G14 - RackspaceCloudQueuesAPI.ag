id: RACKSPACE_CLOUD_SERVER_CloudQueuesAPI
version: '1.0'
type: agreement
context:
  provider: Rackspace
  consumer: Consumer
  validity:
    timeZone: Europe/Madrid
    initial: '2016-07-13T00:00:00.000Z'
  definitions:
    schemas:
      Credits:
        description: Credits
        type: integer
        //minimum: 0
        //maximum: 100
        unit: '%'
    scopes: {}
terms:
  pricing:
    billing:
      period: monthly
      initial: '2016-05-12T10:35:36.000Z'
      penalties:
        - over:
            Credits:
              $ref: '#/context/definitions/schemas/Credits'
  metrics:
    Monthly_Availability:
      schema:
        description: Availability percentage in a month
        type: double
        minimum: 0
        maximum: 100
        unit: '%'
      computer: 'http://Rackspace/Cloud_Server/Monthly_Availability/'
    Restoration:
      schema:
        description: Restoration to recover the system
        type: integer
        minimum: 0
        maximum: 100
        unit: hour
      computer: "http://Rackspace/Cloud_Server/Restoration/\t\t"
    Unavailability:
      schema:
        description: Duration of unavailability
        type: integer
        minimum: 0
        maximum: 1000
        unit: hour
      computer: "http://Rackspace/Cloud_Server/Unavailability/\t"
    ServiceFee:
      schema:
        description: Service fee for a month
        type: integer
        minimum: 0
        maximum: 100
        unit: $
      computer: "http://Rackspace/Cloud_Server/ServiceFee/\t\t\t"
    ServiceThreshold:
      schema:
        description: Service threshold
        type: integer
        minimum: 0
        maximum: 500
        unit: request/second
      computer: "http://Rackspace/Cloud_Server/ServiceFee/\t\t\t"
  guarantees:
    - id: QueuesAPI_GT
      scope: {}
      of:
        - objective: Monthly_Availability >= 999
          precondition: ServiceThreshold <= 300
          scope: {}
          with:
            Monthly_Availability: {}
          window:
            type: static
            period: monthly
            initial: '2016-07-13T00:00:00.000Z'
          penalties:
            - over:
                Credits:
                  $ref: '#/context/definitions/schemas/Credits'
              of:
                - value: '10'
                  condition: Monthly_Availability >= 995 && Monthly_Availability < 999
                - value: '20'
                  condition: Monthly_Availability >= 990 && Monthly_Availability < 995
                - value: '30'
                  condition: Monthly_Availability < 990
