id: OVH_PUBLIC_CLOUD_INSTANCE
version: '1.0'
type: agreement
context:
  provider: OVH
  consumer: Consumer
  validity:
    timeZone: Europe/Madrid
    initial: '2016-07-13T00:00:00.000Z'
  definitions:
    schemas:
      MonthlyFeePercentage:
        description: percentage of the fee to pay for a month of the service (divided by 100).
        type: integer
        unit: '%'
        computer: 'http://aws/Amazon_MUP/'
    scopes: {}
terms:
  pricing:
    billing:
      period: monthly
      initial: '2016-05-12T10:35:36.000Z'
      penalties:
        - over:
            MonthlyFeePercentage:
              $ref: '#/context/definitions/schemas/MonthlyFeePercentage'
  metrics:
    AcumUnavailability:
      schema:
        description: >-
          Unavailability (with 3 decimal digits) of the service
          (percentage)//Aggregated minutes after first 3 divided by Total
          Minutes
        type: integer
        minimum: 0
        maximum: 100000
        unit: '%'
    TotalMonthlyMinutes:
      schema:
        description: Total Minutes in a month (multiplied by 100)
        type: integer
        minimum: 0
        maximum: 450
        unit: '%'
  guarantees:
    - id: AvailabilityInstance_GT
      scope: {}
      of:
        - objective: AcumUnavailability <= 1
          with:
            AcumUnavailability: {}
          window:
            type: static
            period: monthly
            initial: '2016-07-13T00:00:00.000Z'
          scope: {}
          penalties:
            - over:
                MonthlyFeePercentage:
                  $ref: '#/context/definitions/schemas/MonthlyFeePercentage'
              of:
                - value: 5 * AcumUnavailability * TotalMonthlyMinutes
                  condition: AcumUnavailability > 1
              upTo: 10000
